<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Header" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium_large</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="SubHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="Header.Dark">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Header.Bright">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
